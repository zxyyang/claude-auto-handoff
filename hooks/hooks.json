{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/session-start.js\"",
            "timeout": 3
          }
        ],
        "description": "静默写入默认交接配置"
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/stop.js\"",
            "timeout": 10
          }
        ],
        "description": "检查上下文大小，超阈值自动触发交接"
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/pre-compact.js\"",
            "timeout": 10
          }
        ],
        "description": "compact 前无条件触发交接（最后防线）"
      }
    ]
  }
}
